<Page x:Class="WpfApp2.pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Settings">

    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--<Border BorderThickness="10" BorderBrush="#FFAB0000"></Border>-->
            <ToggleButton HorizontalAlignment="Left" Margin="90,60,0,0" VerticalAlignment="Top" Height="40" Width="40" Style="{DynamicResource MaterialDesignFlatPrimaryToggleButton}" Grid.Column="1">
                <StackPanel>
                    <Image Source="../img/close.png.png" Width="30" HorizontalAlignment="Right"/>
                </StackPanel>
            </ToggleButton>
            <ToggleButton x:Name="toggleButton" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Height="40" Width="40" RenderTransformOrigin="0.07,0.49" Checked="coolChecked" Unchecked="coolUnchecked" Grid.Column="1"/>
            <TextBox x:Name="BpmInput" HorizontalAlignment="Right" KeyUp="KeyUp" Background="{x:Null}" Margin="0,100,10,0" VerticalAlignment="Top" Height="40" Width="80" Cursor="IBeam" FontFamily="Roboto Light" FontSize="24" Foreground="White" PreviewTextInput="NumberValidationTextBox" Grid.Column="1"/>
            <Label Content="Auto" Margin="10,10,0,0" VerticalAlignment="Top" Width="110.88" Height="40" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Label Content="Cool switch" Margin="10,55,0,0" VerticalAlignment="Top" Width="110.88" Height="40" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Label Content="BPM" x:Name="setBpm" Margin="10,100,0,0" VerticalAlignment="Top" Width="110.88" Height="40" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
